---
import { siteConfig } from '../config.ts';
import { Icon } from 'astro-icon/components';
const formspreeId = import.meta.env.PUBLIC_FORMSPREE_ID;
---

<section id="contact" class="bg-mono-lighter px-4 py-20 sm:px-6 lg:px-8">
  <div class="mx-auto max-w-7xl">
    <div class="grid grid-cols-1 items-start gap-12 lg:grid-cols-2">
      <div class="scroll-fade-left">
        <h2 class="text-mono-black mb-6 text-4xl font-bold sm:text-5xl">
          {siteConfig.contact.title}
        </h2>
        <p class="text-mono-dark mb-8 text-xl leading-relaxed">
          {siteConfig.contact.subtitle}
        </p>

        <ul class="mb-8 space-y-4">
          {
            siteConfig.contact.benefits.map((benefit) => (
              <li class="flex items-center">
                <Icon
                  name="heroicons:check"
                  class="text-mono-black mr-4 h-6 w-6 flex-shrink-0"
                />
                <span class="text-mono-dark">{benefit}</span>
              </li>
            ))
          }
        </ul>

        <div class="border-mono-light border-t pt-8">
          <p class="text-mono-gray mb-4 text-sm">
            ¿Tienes preguntas? Contacta con nuestro equipo:
          </p>
          <a
            href={`mailto:${siteConfig.contact.email}`}
            class="text-mono-black font-semibold">{siteConfig.contact.email}</a
          >
        </div>
      </div>

      <div
        class="scroll-fade-right border-mono-lighter rounded-xl border bg-white p-8 shadow-lg"
      >
        <form id="contactForm" class="space-y-6" action={`https://formspree.io/f/${formspreeId}`} method="POST">
          <div>
            <label
              for="name"
              class="text-mono-black mb-2 block text-sm font-semibold"
              >{siteConfig.contact.form.fields.name.label}</label
            >
            <input
              type="text"
              id="name"
              name="name"
              required={siteConfig.contact.form.fields.name.required}
              class="border-mono-lighter w-full rounded-lg border px-4 py-3"
              placeholder={siteConfig.contact.form.fields.name.placeholder}
            />
          </div>

          <div>
            <label
              for="email"
              class="text-mono-black mb-2 block text-sm font-semibold"
              >{siteConfig.contact.form.fields.email.label}</label
            >
            <input
              type="email"
              id="email"
              name="email"
              required={siteConfig.contact.form.fields.email.required}
              class="border-mono-lighter w-full rounded-lg border px-4 py-3"
              placeholder={siteConfig.contact.form.fields.email.placeholder}
            />
          </div>

          <div>
            <label
              for="company"
              class="text-mono-black mb-2 block text-sm font-semibold"
              >{siteConfig.contact.form.fields.company.label}</label
            >
            <input
              type="text"
              id="company"
              name="company"
              class="border-mono-lighter w-full rounded-lg border px-4 py-3"
              placeholder={siteConfig.contact.form.fields.company.placeholder}
            />
          </div>

          <div>
            <label
              for="message"
              class="text-mono-black mb-2 block text-sm font-semibold"
              >{siteConfig.contact.form.fields.message.label}</label
            >
            <textarea
              id="message"
              name="message"
              rows="4"
              class="form-input border-mono-lighter w-full resize-none rounded-lg border px-4 py-3"
              placeholder={siteConfig.contact.form.fields.message.placeholder}
            ></textarea>
          </div>

          <button
            id="submitButton"
            type="submit"
            class="bg-mono-black w-full rounded-lg px-6 py-4 font-semibold text-white shadow-lg"
          >
            {siteConfig.contact.form.cta}
          </button>

          <div id="form-status" class="hidden text-center text-sm font-medium p-3 rounded-lg"></div>

          <p class="text-mono-gray text-center text-xs leading-relaxed">
            Al enviar este formulario, acepta nuestros
            <a href="#" class="underline">Términos de servicio</a> y
            <a href="#" class="underline">Política de privacidad</a>
          </p>
        </form>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const contactForm = document.getElementById('contactForm');
    const statusDiv = document.getElementById('form-status');
    const submitBtn = document.getElementById('submitButton');

    if (contactForm) {
      contactForm.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        // 1. UI de "Cargando"
        submitBtn.disabled = true;
        submitBtn.innerText = "Enviando..."; // Opcional: Cambiar texto del botón
        statusDiv.classList.add('hidden');

        const formData = new FormData(contactForm);

        try {
          // 2. Fetch a Formspree (Importante el Header Accept)
          const response = await fetch(contactForm.action, {
            method: 'POST',
            body: formData,
            headers: {
              'Accept': 'application/json'
            }
          });

          // 3. Manejo de respuesta
          if (response.ok) {
            statusDiv.textContent = "¡Gracias! Tu mensaje ha sido enviado correctamente.";
            statusDiv.className = "text-center text-sm font-medium p-3 rounded-lg bg-green-100 text-green-700 mt-4"; // Estilo Success
            statusDiv.classList.remove('hidden');
            contactForm.reset();
          } else {
            const data = await response.json();
            if (Object.hasOwn(data, 'errors')) {
              statusDiv.textContent = data["errors"].map(error => error["message"]).join(", ");
            } else {
              statusDiv.textContent = "Hubo un problema al enviar el formulario.";
            }
            statusDiv.className = "text-center text-sm font-medium p-3 rounded-lg bg-red-100 text-red-700 mt-4"; // Estilo Error
            statusDiv.classList.remove('hidden');
          }
        } catch (error) {
          statusDiv.textContent = "Error de conexión. Por favor intenta más tarde.";
          statusDiv.className = "text-center text-sm font-medium p-3 rounded-lg bg-red-100 text-red-700 mt-4";
          statusDiv.classList.remove('hidden');
        } finally {
          // 4. Restaurar botón
          submitBtn.disabled = false;
          submitBtn.innerText = "Enviar Mensaje"; // Restaurar texto original (o usar el valor de siteConfig si pudieras acceder a él desde JS)
        }
      });
    }
  });
</script>
