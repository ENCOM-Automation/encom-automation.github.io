---
import { siteConfig } from '../config.ts';
import { Icon } from 'astro-icon/components';
---

<section id="techstack" class="relative bg-white px-4 py-20 sm:px-6 lg:px-8">
  <div class="mx-auto max-w-7xl">
    <div class="scroll-fade-up mx-auto mb-16 max-w-3xl text-center">
      <h2 class="text-mono-black mb-4 text-4xl font-bold sm:text-5xl">
        {siteConfig.techstack.title}
      </h2>
      <p class="text-mono-dark text-xl">
        {siteConfig.techstack.subtitle}
      </p>
    </div>

    <div class="scroll-fade-up">
      <div class="bg-mono-lighter rounded-2xl p-12">
        <div
          class="mx-auto grid max-w-6xl grid-cols-3 items-center gap-12 sm:grid-cols-4 md:grid-cols-6"
        >
          <div class="flex flex-col items-center justify-center gap-3">
            <Icon name="simple-icons:whatsapp" class="text-mono-black h-12 w-12" />
            <span class="text-mono-gray text-xs font-medium">WhatsApp</span>
          </div>
          <div class="flex flex-col items-center justify-center gap-3">
            <Icon
              name="simple-icons:n8n"
              class="text-mono-black h-12 w-12"
            />
            <span class="text-mono-gray text-xs font-medium">n8n</span>
          </div>
          <div class="flex flex-col items-center justify-center gap-3">
            <Icon name="simple-icons:openai" class="text-mono-black h-12 w-12" />
            <span class="text-mono-gray text-xs font-medium">OpenAI</span>
          </div>
          <div class="flex flex-col items-center justify-center gap-3">
            <Icon
              name="simple-icons:googlecloud"
              class="text-mono-black h-12 w-12"
            />
            <span class="text-mono-gray text-xs font-medium">Gemini</span>
          </div>
          <div class="flex flex-col items-center justify-center gap-3">
            <Icon
              name="simple-icons:slack"
              class="text-mono-black h-12 w-12"
            />
            <span class="text-mono-gray text-xs font-medium">Slack</span>
          </div>
          <div class="flex flex-col items-center justify-center gap-3">
            <Icon
              name="simple-icons:gmail"
              class="text-mono-black h-12 w-12"
            />
            <span class="text-mono-gray text-xs font-medium">Gmail</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
